{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "test current gem",
      "type": "shell",
      "command": "bundle exec rake test",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "test"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      }
    },
    {
      "label": "test current file",
      "type": "shell",
      "command": "ruby",
      "args": ["-I", ".", "${fileBasename}"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "runOptions": {
        "reevaluateOnRerun": false
      }
    }
  ]
}
