#!/usr/bin/env ruby

require 'rubygems'
require 'fileutils'

gem_push_options = ARGV

Dir.glob('./judoscale-*').each do |folder|
  puts
  puts "-> #{folder}"
  puts

  Dir.chdir(folder) do
    # We publish each gem as "judoscale-*" and "rails-autoscale-*"
    Dir.glob('*.gemspec').each do |gemspec|
      spec = Gem::Specification.load(gemspec)

      # Build the gem
      system "gem", "build", gemspec

      # Push the gem
      gem_file = "#{spec.name}-#{spec.version}.gem"
      # system "gem", "push", *gem_push_options, gem_file
      puts "gem push #{gem_push_options.join(' ')} #{gem_file}"
    end
  end
end
